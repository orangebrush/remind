import Foundation
///根据类型获取声音名
func getSoundName(withEventType eventType: Int32, withEventSound eventSound: String) -> String{

    let result: String
    switch eventType {
    case 0: //单次
        result = ""
    case 1:     //会议
        result = "meeting"
    case 2:     //生日
        result = "birthday"
    case 3:     //纪念日
        result = "festival"
    case 4:     //生活缴费
        result = "shenghuojiaofei"
    case 5:     //信用卡
        result = "xinyongkahuankuan"
    case 6:     //股指交割
        result = "stock_delivery"
    case 7:     //国债
        result = "treasury_delivery"
    default:    //问候
        result = "greetings"
    }
    
    return result + "_" + eventSound
}

