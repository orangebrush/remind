import Foundation
extension Int32{
    func intervalDayText() -> String{
        let str: String
        if self == 0{
            str = "今天"
        }else if self == 1{
            str = "明天"
        }else if self == 2{
            str = "后天"
        }else{
            str = "\(self)天后"
        }
        return str
    }
    
    
    func birthdaylDayText() -> String{
        let str: String
        if self == 0{
            str = "今天生日"
        }else if self == 1{
            str = "明天生日"
        }else if self == 2{
            str = "后天生日"
        }else{
            str = "距离生日还有\(self)天"
        }
        return str
    }
    
}

